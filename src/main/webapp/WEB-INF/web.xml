<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <display-name>HostedFTP Coding Test</display-name>

    <!-- JNDI resource that Tomcat will provide -->
    <resource-ref>
        <description>MySQL DB</description>
        <res-ref-name>jdbc/HostedFtpDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- If you prefer XML mapping instead of @WebServlet, add this block:
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>com.hostedftp.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>
    -->

    <!-- Make login.jsp the welcome (default) page -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>